COMPOSE_PROJECT_NAME=devkit

# Base domain used by the default Traefik catch-all rule (see docker-compose.yml).
# If you change this, also update traefik.http.routers.projects.rule.
BASE_DOMAIN=local.test

# External ports on the host
HTTP_PORT=80
HTTPS_PORT=443

# Database
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=app
DB_USERNAME=app
DB_PASSWORD=app
DB_ROOT_PASSWORD=root

# Redis / Memcached
REDIS_PORT=6379
MEMCACHED_PORT=11211

# Default PHP version if not specified in a route
DEFAULT_PHP=82

# Traefik (Admin UIs)
TRAEFIK_ENABLE_DASHBOARD=false
TRAEFIK_DASHBOARD_DOMAIN=traefik.local.test
ADMINER_DOMAIN=adminer.local.test
MAILPIT_DOMAIN=mailpit.local.test

# Notes:
# - Project routes are discovered from: projects/**/.devkit/devkit.yml
# - For trusted HTTPS, replace docker/certs/devkit.crt + devkit.key with mkcert certs.
